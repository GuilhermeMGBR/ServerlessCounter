{
  "name": "serverlesscounter",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "format": "yarn base:prettier --write .",
    "format-check": "yarn base:prettier --check .",
    "type-check": "tsc -noEmit",
    "watch:type-check": "tsc -noEmit -w",
    "build": "yarn babel . --extensions '.ts,.tsx' --out-dir ../dist",
    "build:only": "yarn babel . --extensions '.ts,.tsx' --out-dir ../dist",
    "watch:build": "yarn build -w",
    "postbuild": "cp -R node_modules ../dist/node_modules",
    "prestart": "yarn build",
    "start": "func start",
    "test": "jest --verbose",
    "watch:test": "jest --verbose --watch",
    "coverage": "echo \"No coverage yet...\"",
    "sonar": "yarn coverage; npx sonarqube-scanner",
    "pre-commit": "yarn type-check && yarn format-check && yarn test",
    "base:prettier": "yarn prettier --ignore-path .gitignore",
    "fmt": "yarn format",
    "pc": "yarn pre-commit",
    "bo": "yarn build:only",
    "wtc": "yarn watch:type-check",
    "wb": "yarn watch:build",
    "wt": "yarn watch:test"
  },
  "dependencies": {
    "mysql2": "^3.3.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@azure/functions": "^3.5.1",
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@types/jest": "^29.5.1",
    "@types/node": "16.x",
    "azure-functions-core-tools": "^4.x",
    "babel-jest": "^29.5.0",
    "babel-plugin-inline-json-import": "^0.3.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
