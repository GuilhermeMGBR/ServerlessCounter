{
  "name": "serverlesscounter",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "format": "yarn base:prettier --write .",
    "format-check": "yarn base:prettier --check .",
    "build": "tsc",
    "watch": "tsc -w",
    "type-check": "tsc -noEmit",
    "postbuild": "cp -R node_modules ../dist/node_modules",
    "prestart": "yarn build",
    "start": "func start",
    "test": "jest --verbose",
    "watch-test": "jest --verbose --watch",
    "coverage": "echo \"No coverage yet...\"",
    "sonar": "yarn coverage; npx sonarqube-scanner",
    "pre-commit": "yarn type-check && yarn format-check && yarn test",
    "base:prettier": "yarn prettier --ignore-path .gitignore",
    "pc": "yarn pre-commit"
  },
  "dependencies": {
    "mysql2": "^3.3.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@azure/functions": "^3.5.1",
    "@types/jest": "^29.5.1",
    "@types/node": "16.x",
    "azure-functions-core-tools": "^4.x",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
