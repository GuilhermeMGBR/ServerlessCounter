{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@CounterService/*": ["CounterService/*"],
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
